<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aam.mcu">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.aam.mcu.Welcome"
            android:theme="@style/AppTheme.NoActionBar.TransparentStatus">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aam.mcu.AddPost"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aam.mcu.Comments"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aam.mcu.Profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aam.mcu.LogIn"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aam.mcu.Register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aam.mcu.ForgotPassword"
            android:theme="@style/AppTheme.NoActionBar.TransparentStatus" />
        <activity
            android:name="com.aam.mcu.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aam.mcu.Settings"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name="com.aam.mcu.services.ImageUploadService"
            android:enabled="true" />
        <service
            android:name=".services.FCMService"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>